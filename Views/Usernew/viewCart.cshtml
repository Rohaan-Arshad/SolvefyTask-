@model List<Solvefy_Task.Models.Product>

<h1>Shopping Cart</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th></th> <!-- Added column for Remove button -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>@item.Category</td>
                    <td>
                        <!-- Button to remove the item from the cart -->
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your cart is empty.</p>
}


<a class="btn btn-secondary" asp-controller="Usernew" asp-action="Index1">Continue Shopping .. </a>